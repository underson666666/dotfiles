
# additional settings
alias vi='vim'
alias view='vim -R'
alias flake8='flake8 --statistics'

# WSL
if [[ "$(uname -r)" == *microsoft* ]]; then
    alias cmd='explorere.exe'
fi

HISTTIMEFORMAT='%F %T '
HISTSIZE=10000
HISTFILESIZE=20000

# direnv
show_virtual_env() {
    if [ -n "$VIRTUAL_ENV" ] and [ -n "$DIRENV_DIR" ] ; then
        echo "($(basename $VIRTUAL_ENV))"
    fi
}
PS1='$(show_virtual_env)'$PS1

